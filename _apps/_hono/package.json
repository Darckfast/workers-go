    "test": "pnpm run build:go && node --test index.spec.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.2",
    "hono": "^4.9.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/node": "^24.3.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
