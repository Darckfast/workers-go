{
	"$schema": "https://raw.githubusercontent.com/SchemaStore/schemastore/refs/heads/master/src/schemas/json/package.json",
	"name": "worker",
	"version": "0.0.0",
	"description": "",
	"main": "main.ts",
	"type": "module",
	"scripts": {
		"preinstall": "GOOS=js GOARCH=wasm go get ./pkg/...",
		"dev": "vite",
		"start": "vite",
		"deploy": "wrangler deploy",
		"dev:wrangler": "pnpm run build && wrangler --port 5173 dev",
		"build": "GOOS=js GOARCH=wasm go build -trimpath -ldflags='-s -w -buildid=' -o ./bin/app.wasm ./pkg/main.go"
	},
	"engines": {
		"node": "22"
	},
	"engineStrict": true,
	"license": "MIT",
	"packageManager": "pnpm@10.14.0",
	"devDependencies": {
		"@biomejs/biome": "2.2.2",
		"@cloudflare/vite-plugin": "^1.12.0",
		"vite": "^7.1.3",
		"vite-plugin-watch": "^0.3.1",
		"wrangler": "^4.33.0"
	},
	"dependencies": {
		"@cloudflare/containers": "^0.0.26"
	}
}
